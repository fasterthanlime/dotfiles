[
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "t w": "pane::CloseAllItems",
      "t k": "pane::ActivatePrevItem",
      "t j": "pane::ActivateNextItem",
      "\\ d": "editor::Hover",
      "\\ t": "editor::GoToTypeDefinition",
      "\\ g": "editor::GoToDefinition",
      "\\ r": "editor::Rename"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-j": "editor::GoToDiagnostic",
      "ctrl-k": "editor::GoToPrevDiagnostic",
      "ctrl-`": "terminal_panel::ToggleFocus",
      "cmd-enter": "copilot::Suggest"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock"
    }
  }
]
