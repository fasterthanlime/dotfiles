      "projects": [
        {
          "paths": ["~/bearcove/home"]
        },
        {
          "paths": ["~/bearcove/lib-skill"]
        },
        {
          "paths": ["~/bearcove/shapely"]
        },
        {
          "paths": ["~/bearcove/timelord"]
        }
      ]
    },
    {
      "host": "brat",
      "projects": [
        {
          "paths": ["~/bearcove/beardist"]
        }
      ]
    },
    {
      "host": "styx",
      "projects": [
        {
          "paths": ["~/beardist"]
        },
        {
          "paths": ["~/facet"]
        }
      ]
    },
    {
      "host": "orb",
      "username": "amos@clutter",
      "projects": [
        {
          "paths": ["/home/amos"]
        }
      ]
    },
    {
      "host": "trollop",
      "projects": [
        {
          "paths": ["~/bearcove/beardist"]
        }
      ]
    }
  ],
  "cursor_blink": false,
  "outline_panel": {
    "dock": "right"
  },
  "theme": {
    "dark": "Melange Dark",
    "light": "Melange Light"
  },
  "terminal": {
    "shell": {
      "program": "fish"
    },
    "dock": "bottom",
    "cursor_shape": "bar",
    "blinking": "terminal_controlled",
    "copy_on_select": true
    // "font_features": {}
  },
  "languages": {
    "Markdown-Inline": {
      "show_edit_predictions": false
    },
    "Markdown": {
      "show_edit_predictions": false,
      "preferred_line_length": 80,
      // soft wrap fucks with vim's "I" â€” it inserts where the soft wrap happens,
      // which adds strays `>` when quoting long pasted things.
      "soft_wrap": "none"
    },
    "HTML": {},
    "Rust": {
      "format_on_save": "on"
    },
    "TOML": {
      "format_on_save": "on"
    },
    "SCSS": {},
    "TypeScript": {
      "format_on_save": "on"
    },
    "TypeScriptReact": {
      "format_on_save": "on"
    },
    "Svelte": {
      "format_on_save": "on"
    },
    "Just": {
      "format_on_save": "on"
    },
    "Terraform": {
      "format_on_save": "on"
    },
    "YAML": {
      "format_on_save": "off"
    }
  },
  "language_models": {
    "lmstudio": {
      // "api_url": "http://192.168.1.156:1234/api/v0"
      "api_url": "http://127.0.0.1:1234/api/v0"
    }
  },
  "base_keymap": "VSCode",
  // "buffer_font_family": "IosevkaTerm Nerd Font",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 16.0,
  "ui_font_size": 18,
  "inlay_hints": {
    "enabled": true,
    "show_background": true
  },
  "semantic_index": {
    "enabled": true
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },
  "show_whitespaces": "selection",
  "tab_bar": {
    "show": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "always"
  },
  "gutter": {
    "folds": false
  },
  "project_panel": {
    "button": false
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path_lookup": true
      },
      "initialization_options": {
        "cargo": {
          "features": "all",
          "buildScripts": {
            "enable": true
          }
        },
        "procMacro": {
          "enable": true
        },
        "check": {
          "command": "lint-doc",
          "features": "all"
        }
      }
    }
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "line_width": 4
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "inline_assistant_model": {
      "version": "2",
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "openai",
      "model": "gpt-4.1"
    },
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "open": true,
          "create_directory": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "always_allow_tool_actions": true,
    "version": "2",
    "provider": "zed.dev",
    "inline_alternatives": [],
    "enable_experimental_live_diffs": true,
    "stream_edits": true
  },
  "preview_tabs": {
    "enabled": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  },
  "preferred_line_length": 100,
  "soft_wrap": "none",
  "file_types": {
    "Jinja2": ["jinja", "j2"],
    "XML": ["svg"],
    "TypeScript": ["ts", "tsx"],
    "Markdown": ["in"],
    "CSS": ["css.jinja"]
  },
  "show_edit_predictions": true,
  "completions": {
    "words": "fallback"
  }
}
