// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "ssh_connections": [
        {
            "host": "brat",
            "username": "amos",
            "projects": [
                {
                    "paths": ["~/bearcove/sansioex"]
                }
            ]
        }
    ],
    "cursor_blink": false,
    "language_models": {
        "anthropic": {
            "version": "1"
        },
        "openrouter": {
            "api_url": "https://openrouter.ai/api/v1"
        }
    },
    "outline_panel": {
        "dock": "right"
    },
    "theme": {
        "dark": "Catppuccin Macchiato",
        "light": "Catppuccin Latte"
    },
    "terminal": {
        "shell": {
            "program": "fish"
        },
        "dock": "bottom"
    },
    "languages": {
        "Markdown-Inline": {
            "show_edit_predictions": false
        },
        "Markdown": {
            "show_edit_predictions": false,
            "preferred_line_length": 80,
            "soft_wrap": "preferred_line_length"
        },
        "HTML": {},
        "Rust": {
            "format_on_save": "on"
        },
        "TOML": {
            "format_on_save": "on"
        },
        "SCSS": {},
        "TypeScript": {
            "format_on_save": "on"
        },
        "TypeScriptReact": {
            "format_on_save": "on"
        },
        "Svelte": {
            "format_on_save": "on"
        },
        "Just": {
            "format_on_save": "on"
        }
    },

    "base_keymap": "VSCode",
    "buffer_font_family": "Iosevka",
    "buffer_font_size": 16.0,
    "ui_font_size": 15,
    "inlay_hints": {
        "enabled": true,
        "show_background": true
    },
    "semantic_index": {
        "enabled": true
    },
    "vim_mode": true,
    "vim": {
        "use_system_clipboard": "always",
        "use_smartcase_find": true
    },
    "show_whitespaces": "selection",
    "tab_bar": {
        "show": true
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false
    },
    "scrollbar": {
        "show": "always"
    },
    "gutter": {
        "folds": false
    },
    "project_panel": {
        "button": false
    },
    "lsp": {
        "rust-analyzer": {
            "binary": {
                "path_lookup": true
            },
            "initialization_options": {
                "rustfmt": {},
                "check": {
                    "extraArgs": []
                },
                "checkOnSave": {
                    "command": "clippy"
                },
                "cargo": {
                    "buildScripts": {
                        "enable": true
                    }
                },
                "procMacro": {
                    "enable": true
                }
            }
        }
    },
    "indent_guides": {
        "coloring": "indent_aware",
        "line_width": 4
    },
    "tab_size": 4,
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-20240620-fast-edit"
        },
        "version": "2",
        "provider": "zed.dev",
        "enable_experimental_live_diffs": false,
        "inline_alternatives": [
            // {
            //   "provider": "mistral",
            //   "model": "codestral-latest"
            // },
            // {
            //   "provider": "openai",
            //   "model": "o3-mini"
            // }
        ]
    },
    "preview_tabs": {
        "enabled": false
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "slash_commands": {
        "docs": {
            "enabled": true
        }
    },
    "preferred_line_length": 100,
    "soft_wrap": "none",
    "file_types": {
        "Jinja2": ["jinja", "j2"],
        "XML": ["svg"],
        "TypeScript": ["ts", "tsx"]
    },
    "show_edit_predictions": true
}
