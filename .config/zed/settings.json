// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "read_only_files": [
    "**/.rustup/**",
    "**/.cargo/registry/**",
    "**/.cargo/git/**",
    "target/**/*.rs",
    "**/*.lock",
  ],
  "show_signature_help_after_edits": true,
  "use_system_window_tabs": false,
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null,
    },
    "enabled_in_text_threads": true,
  },
  "context_servers": {
    "mcp-server-brave-search": {
      "enabled": true,
      "settings": {},
    },
    "mcp-server-sequential-thinking": {
      "enabled": false,
      "settings": {},
    },
  },
  "icon_theme": "Bearded Icon Theme",
  "use_system_path_prompts": false,
  "minimap": {
    "show": "auto",
  },
  "ssh_connections": [
    {
      "host": "golem",
      "username": "amos",
      "args": [],
      "projects": [
        {
          "paths": ["/home/amos/bearcove"],
        },
        {
          "paths": ["/home/amos/bearcove/dodeca"],
        },
        {
          "paths": ["/home/amos/bearcove/facet"],
        },
      ],
    },
    {
      "host": "souffle",
      "args": [],
      "projects": [],
    },
    {
      "host": "golem",
      "username": "amos",
      "args": [],
      "projects": [],
    },
  ],
  "cursor_blink": false,
  "outline_panel": {
    "dock": "right",
  },
  "theme": {
    "dark": "Melange Dark",
    "light": "Hex Light Theme",
  },
  "terminal": {
    "font_family": "Maple Mono NF",
    "keep_selection_on_copy": false,
  },
  "languages": {
    "Markdown-Inline": {
      "show_edit_predictions": false,
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": true,
        "show_background": true,
        "show_type_hints": true,
        "show_value_hints": true,
        "show_other_hints": true,
      },
    },
    "Markdown": {
      "show_edit_predictions": false,
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": true,
        "show_background": true,
        "show_type_hints": true,
        "show_value_hints": true,
        "show_other_hints": true,
      },
      "preferred_line_length": 80,
      // soft wrap fucks with vim's "I" â€” it inserts where the soft wrap happens,
      // which adds strays `>` when quoting long pasted things.
      "soft_wrap": "none",
    },
    "HTML": {
      "format_on_save": "off",
    },
    "Rust": {
      "format_on_save": "on",
    },
    "TOML": {
      "format_on_save": "on",
    },
    "SCSS": {
      "format_on_save": "off",
    },
    "TypeScript": {
      "format_on_save": "on",
    },
    "Svelte": {
      "format_on_save": "on",
    },
    "Just": {
      "format_on_save": "on",
    },
    "Terraform": {
      "format_on_save": "on",
    },
    "YAML": {
      "format_on_save": "off",
    },
  },
  "language_models": {
    "openai_compatible": {
      "GLM": {
        "api_url": "https://api.z.ai/api/coding/paas/v4",
        "available_models": [
          {
            "name": "glm-4.7",
            "max_tokens": 200000,
            "max_output_tokens": 128000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
        ],
      },
    },
    "lmstudio": {},
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "Maple Mono",
  // "buffer_font_family": "IosevkaTerm Nerd Font",
  // "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 14.0,
  "ui_font_size": 16,
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
  },
  "show_whitespaces": "selection",
  "tab_bar": {
    "show": true,
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
  },
  "scrollbar": {
    "show": "always",
  },
  "gutter": {
    "folds": false,
  },
  "project_panel": {
    "button": true,
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "line_width": 4,
  },
  "agent": {
    "show_turn_stats": true,
    "notify_when_agent_waiting": "all_screens",
    "single_file_review": false,
    "play_sound_when_agent_done": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
    "always_allow_tool_actions": true,
    "inline_alternatives": [],
  },
  "preview_tabs": {
    "enabled": false,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all",
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
  },
  "preferred_line_length": 100,
  "soft_wrap": "none",
  "file_types": {
    "Jinja2": ["jinja", "j2"],
    "XML": ["svg"],
    "Markdown": ["in"],
    "CSS": ["css.jinja"],
  },
  "show_edit_predictions": true,
  "completions": {
    "words": "fallback",
  },
  "agent_servers": {
    "codex": {
      "favorite_config_option_values": {
        "mode": ["full-access"],
      },
      "favorite_models": ["gpt-5.2-codex/high", "gpt-5.2-codex/medium"],
    },
    "claude": {
      "default_mode": "bypassPermissions",
      "favorite_models": [],
      "default_config_options": {},
      "favorite_config_option_values": {},
    },
    "kimi": {
      "type": "custom",
      "command": "kimi",
      "args": ["acp"],
    },
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
      },
      "enable_lsp_tasks": true,
    },
    "rust-analyzer": {
      "initialization_options": {
        "imports": {
          "preferNoStd": false,
        },
        "check": {
          "command": "clippy",
          "workspace": true,
          "allTargets": true,
        },
        "diagnostics": {
          "experimental": {
            // "enable": true
          },
          "styleLints": {
            "enable": true,
          },
        },
        "cargo": {
          "features": "all",
        },
      },
    },
  },
}
